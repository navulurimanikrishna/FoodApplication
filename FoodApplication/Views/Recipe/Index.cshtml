@{
    ViewData["Title"] = "Recipe";
}
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12">
            @Html.Partial("_SearchBar")
            </div>
        </div>
        <div class="row ">
            <div class="col-2">
                <div class="shadow rounded">
                    <div class="border-bottom border-3 p-2">
                        <h4 class="text-pink text-center fst-italic">Recipes</h4>
                        @Html.Partial("_SideMenu")
                    </div>
                </div>
            </div>
            <div class="col-10">
                <div class="mb-3">
                    <h4 class="text-dark">Pizza</h4>
                    <div class="row" id="pizzaRecipe">
                    </div>
                </div>
                <div class="mb-3">
                    <h4 class="text-dark">Cake</h4>
                    <div class="row" id="cakeRecipe">
                    </div>
                </div>
                <div class="mb-3">
                    <h4 class="text-dark">Chicken</h4>
                    <div class="row" id="chickenRecipe">
                    </div>
                </div>
            <div id="todayspecial" class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishcard">
                        <img class="card-img-top h-85" src="http://forkify-api.herokuapp.com/images/BBQChickenPizzawithCauliflowerCrust5004699695624ce.jpg" alt="dish" />
                        <div class="card-body">
                            <p class="card-title fw-bold">Pizza</p>
                            <div>
                                <button type="button" class="btn btn-sm btn-primary p-2">order</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishcard">
                        <img class="card-img-top h-85" src="http://forkify-api.herokuapp.com/images/gelatin_poke_cake2d07.jpg" alt="dish" />
                        <div class="card-body">
                            <p class="card-title fw-bold">Cake</p>
                            <div>
                                <button type="button" class="btn btn-sm btn-primary p-2">order</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishcard">
                        <img class="card-img-top h-75" src="http://forkify-api.herokuapp.com/images/4686_MEDIUM0e58.jpg" alt="dish" />
                        <div class="card-body">
                            <p class="card-title fw-bold">Chicken</p>
                            <div>
                                <button type="button" class="btn btn-sm btn-primary p-2">order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
        GetRecipes("Pizza", "pizzaRecipe",false);
        GetRecipes("Cake", "cakeRecipe", false);
        GetRecipes("Chicken", "chickenRecipe", false);
        })    
    </script>